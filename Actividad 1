/******************************************************************************

   Programa que c√°lcula la edad de usuario

*******************************************************************************/
#include <stdio.h>
#include <iostream>


int main()
{
    int edad;
    std::cout <<"Por favor ingrese su edad; ";
    std::cin >> edad; 
    
    if (edad >=18){
        std::cout <<"Felicidades, usted es mayor de edad." <<std::endl;
    } else {
        std::cout <<"Lo siento, usted es menor de edad." <<std::endl;
    }
    
    return 0;
}
